@using Microsoft.AspNetCore.Identity;
@model SingleRoom.Models.Trip

@{
    ViewData["Title"] = "Dopisz się do wycieczki";
}

@if (User.Identity.Name == Model.EmailAddress)
{
    <h1>Nie możesz dopisać się do swojej wycieczki</h1>
}
else
{


    <h1>Dopisz się do wycieczki</h1>

    <hr readonly />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EnrollToTrip">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TripId" readonly />
                <div class="form-group">
                    <label asp-for="TripName" class="control-label"></label>
                    <input asp-for="TripName" class="form-control" readonly />
                    <span asp-validation-for="TripName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TravelAgencyName" class="control-label"></label>
                    <input asp-for="TravelAgencyName" class="form-control" readonly />
                    <span asp-validation-for="TravelAgencyName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartingAirport" class="control-label"></label>
                    <input asp-for="StartingAirport" class="form-control" readonly />
                    <span asp-validation-for="StartingAirport" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Destination" class="control-label"></label>
                    <input asp-for="Destination" class="form-control" readonly />
                    <span asp-validation-for="Destination" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" readonly />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" readonly />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmailAddress" class="control-label"></label>
                    <input asp-for="EmailAddress" class="form-control" readonly />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ParticipantEmail" class="control-label"></label>
                    <input asp-for="ParticipantEmail" class="form-control" value="@User.Identity.Name" />
                    <span asp-validation-for="ParticipantEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Dopisz się" class="btn btn-primary" readonly />
                </div>
            </form>
        </div>
    </div>
}


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
